[Unit]
Description=Spectrum ${service}

[Service]
ExecStart=${binary} --local-port ${port} --public-address ${public_address} --log-level trace
Type=simple
Restart=no
EnvironmentFile=/etc/spectrum.conf
Environment="RUST_BACKTRACE=1"
LimitNOFILE=64000
LimitFSIZE=infinity
LimitCPU=infinity
LimitAS=infinity
LimitMEMLOCK=infinity
LimitNPROC=64000
